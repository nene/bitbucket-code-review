{
    "manifest_version": 2,

    "name": "Bitbucket mark-as-read",
    "description": "Mark commits in Bitbucket as read or unread",
    "version": "1.0",

    "content_scripts": [
        {
            "matches": [
                "https://bitbucket.org/zeroturnaround/xr-agent/commits/*",
                "https://zeroturnaround.atlassian.net/browse/*"
            ],
            "js": [
                "jquery.min.js",
                "content-script.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],

    "permissions": [
        "storage"
    ]
}
