{
    "manifest_version": 2,

    "name": "Bitbucket code review",
    "short_name": "Bitbucket CR",
    "description": "Improvements to Bitbucket and JIRA for easier code reviewing",
    "version": "1.0",

    "icons": {
        "128": "icon.png"
    },

    "content_scripts": [
        {
            "matches": [
                "https://bitbucket.org/*/commits/*",
                "https://*.atlassian.net/browse/*"
            ],
            "js": [
                "content-script.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "permissions": [
        "storage"
    ]
}
